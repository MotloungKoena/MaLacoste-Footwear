@model Brand
@{
    Layout = "_AdminLayout";
    string title = ViewBag.Action + " Brand";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BrandName">Name</label>
        <input asp-for="BrandName" class="form-control">
    </div>

    <input type="hidden" asp-for="BrandId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
